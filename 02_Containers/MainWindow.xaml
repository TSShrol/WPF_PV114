<Window x:Class="_02_Containers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_Containers"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <Button Click="Button_Click_Stack" Content="Stack Panel" FontSize="20" Height="50"></Button>
        <Button Click="Button_Click_Wrap" Content="Wrap Panel" FontSize="20" Height="50"></Button>
        <Button Click="Button_Click_Canvas" Content="Canvas" FontSize="20" Height="50"></Button>
        <Button Click="Button_Click_Uniform" Content="Uniform Grid" FontSize="20" Height="50"></Button>
        <Button Click="Button_Click_Dock" Content="DockPanel" FontSize="20" Height="50"></Button>
        <Button Click="Button_Click_Page1" Content="Page1" FontSize="20" Height="50"/>
    </StackPanel>
</Window>
