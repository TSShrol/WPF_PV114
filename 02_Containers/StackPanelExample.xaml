<Window x:Class="_02_Containers.StackPanelExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_Containers"
        mc:Ignorable="d"
        Title="StackPanelExample" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <Button  FontSize="20" Padding="10" Margin="10, 10,0,10">Red</Button>
        <Button  FontSize="20" Padding="10" Margin="10, 10,0,10">Green</Button>
        <Button  FontSize="20" Padding="10" Margin="10, 10,0,10">Yellow</Button>
    </StackPanel>
</Window>
